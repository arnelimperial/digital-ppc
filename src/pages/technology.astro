---
import Head from "../components/multiverse/Head.astro";
import Header from "../components/multiverse/Header.astro";
import Main from "../components/multiverse/Main.astro";
import Footer from "../components/multiverse/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="is-preload">
    <div id="wrapper">
      <header id="header">
        <Header />
      </header>
      <main>
        <Main />
      </main>
      <footer id="footer" class="panel">
        <Footer />
      </footer>
    </div>

    <!-- Scripts -->
    <script is:inline src="/multiverse/jquery.min.js"></script>
    <script is:inline src="/multiverse/jquery.poptrox.min.js"></script>
    <script is:inline src="/multiverse/browser.min.js"></script>
    <script is:inline src="/multiverse/breakpoints.min.js"></script>
    <script src="../scripts/multiverse/util.js"></script>
    <script src="../scripts/multiverse/main.js"></script>
  </body>
</html>
