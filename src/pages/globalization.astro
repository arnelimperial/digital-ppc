---
import Head from "../components/parallelism/Head.astro";
import Main from "../components/parallelism/Main.astro";
import Footer from "../components/parallelism/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={ SITE_TITLE } description={ SITE_DESCRIPTION } />
  </head>
  <body class="is-preload">
    <div id="wrapper">
      <main>
        <Main />
      </main>
      <footer>
        <Footer />
      </footer>
    </div>
    <!-- Scripts -->
    <script is:inline src="/parallelism/jquery.min.js"></script>
    <script is:inline src="/parallelism/jquery.poptrox.min.js"></script>
    <script is:inline src="/parallelism/browser.min.js"></script>
    <script is:inline src="/parallelism/breakpoints.min.js"></script>
    <script src="../scripts/parallelism/util.js"></script>
    <script src="../scripts/parallelism/main.js"></script>
  </body>
</html>
